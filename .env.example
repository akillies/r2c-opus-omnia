# R2C Application Configuration
# Copy this file to .env and update values as needed

# Database connection string
# For Docker Compose: postgresql://r2c:r2c_password@db:5432/r2c
# For local PostgreSQL: postgresql://user:password@localhost:5432/r2c
DATABASE_URL=postgresql://r2c:r2c_password@db:5432/r2c

# Server port (default: 5000)
PORT=5000

# Session secret - change this in production
SESSION_SECRET=change-me-to-a-random-string

# Database port mapping for Docker (default: 5432)
DB_PORT=5432

# Node environment
NODE_ENV=production
